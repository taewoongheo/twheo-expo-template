{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noEmit": true,

    /* Base */
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,

    "paths": {
      "@src/*": ["./src/*"],
      "assets/*": ["./assets/*"],
      "@env": ["./src/lib/env.js"]
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "nativewind-env.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
